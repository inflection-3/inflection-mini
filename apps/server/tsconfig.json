{
  "extends": "@mini/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@mini/db": ["../../packages/db"],
      "@mini/types": ["../../packages/types"]
    }
  },
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/db" }
  ]
}
